{% extends "base.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
<div class="container">
	<div class="row">
		<div class="col-12">
			<h2 class="my-4">Question</h2>
			<div class="q-container-show p-4">
				{{ form_start(form, {'attr': {'class': 'myform'}}) }}
				{{ form_row(form.title, {'attr': {'class': 'myinput'}}) }}
				{{ form_row(form.content) }}
				{{ form_row(form.askedAt, {'label': 'Entrez la date de publication de votre question'}) }}
				{{ form_row(form.gender) }}
				<hr>
				{{ form_rest(form) }}
				<button type="submit" class="btn btn-dark">Soumettre</button>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>
{% endblock %}